# Configuration nginx pour Valthera Adventures
# 
# Cette configuration est prévue pour un nginx externe (hors Docker)
# qui proxy vers le bot Discord et le site web.
#
# Usage:
#   1. Copiez ce fichier dans /etc/nginx/sites-available/valthera.conf
#   2. Créez un lien: ln -s /etc/nginx/sites-available/valthera.conf /etc/nginx/sites-enabled/
#   3. Testez: nginx -t
#   4. Rechargez: nginx -s reload

# Upstream pour le bot Valthera (health checks / metrics)
upstream valthera_bot {
    server 127.0.0.1:3000;
    keepalive 2;
}

# Upstream pour le site web Next.js
upstream valthera_web {
    server 127.0.0.1:3001;
    keepalive 4;
}

# ===========================================
# SITE WEB PRINCIPAL
# ===========================================
server {
    listen 80;
    listen [::]:80;
    
    # Remplacez par votre domaine
    server_name valthera.local localhost;
    
    # Logs
    access_log /var/log/nginx/valthera_access.log;
    error_log /var/log/nginx/valthera_error.log;

    # Proxy vers Next.js
    location / {
        proxy_pass http://valthera_web;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # Static files caching
    location /_next/static {
        proxy_pass http://valthera_web;
        proxy_cache_valid 60m;
        add_header Cache-Control "public, max-age=31536000, immutable";
    }

    # ===========================================
    # BOT HEALTH CHECKS / MONITORING
    # ===========================================
    
    # Liveness probe - Le processus est-il en vie?
    location /api/bot/health {
        proxy_pass http://valthera_bot/health;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_connect_timeout 5s;
        proxy_read_timeout 10s;
        add_header Cache-Control "no-store, no-cache, must-revalidate";
    }
    
    # Readiness probe - Le bot est-il prêt à servir?
    location /api/bot/ready {
        proxy_pass http://valthera_bot/ready;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
    }

    # Métriques Prometheus
    location /api/bot/metrics {
        proxy_pass http://valthera_bot/metrics;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        
        # Restreindre l'accès (décommentez selon vos besoins)
        # allow 127.0.0.1;
        # allow 10.0.0.0/8;
        # deny all;
    }
    
    # Status détaillé JSON
    location /api/bot/status {
        proxy_pass http://valthera_bot/status;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
    }

    # ===========================================
    # SÉCURITÉ
    # ===========================================
    
    # Cacher la version nginx
    server_tokens off;
    
    # Headers de sécurité basiques
    add_header X-Content-Type-Options nosniff always;
    add_header X-Frame-Options DENY always;
    add_header X-XSS-Protection "1; mode=block" always;
}

