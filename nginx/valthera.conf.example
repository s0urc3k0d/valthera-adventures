# Configuration nginx pour Valthera Adventures
# 
# Cette configuration est prévue pour un nginx externe (hors Docker)
# qui proxy vers le bot Discord pour les health checks et métriques.
#
# Usage:
#   1. Copiez ce fichier dans /etc/nginx/sites-available/valthera.conf
#   2. Créez un lien: ln -s /etc/nginx/sites-available/valthera.conf /etc/nginx/sites-enabled/
#   3. Testez: nginx -t
#   4. Rechargez: nginx -s reload
#
# Note: Le bot Discord utilise WebSocket pour communiquer avec Discord,
# donc seuls les endpoints de monitoring HTTP sont disponibles.

# Upstream pour le bot Valthera
upstream valthera_bot {
    server 127.0.0.1:3000;
    keepalive 2;
}

# Configuration HTTP (ou HTTPS avec certificat)
server {
    listen 80;
    listen [::]:80;
    
    # Remplacez par votre domaine ou laissez localhost
    server_name valthera.local localhost;
    
    # Logs
    access_log /var/log/nginx/valthera_access.log;
    error_log /var/log/nginx/valthera_error.log;

    # ===========================================
    # HEALTH CHECKS
    # ===========================================
    
    # Liveness probe - Le processus est-il en vie?
    location /health {
        proxy_pass http://valthera_bot/health;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_connect_timeout 5s;
        proxy_read_timeout 10s;
        
        # Pas de cache pour les health checks
        add_header Cache-Control "no-store, no-cache, must-revalidate";
    }
    
    # Alias Kubernetes-style
    location /healthz {
        proxy_pass http://valthera_bot/health;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
    }
    
    # Readiness probe - Le bot est-il prêt à servir?
    location /ready {
        proxy_pass http://valthera_bot/ready;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_connect_timeout 5s;
        proxy_read_timeout 10s;
    }
    
    location /readyz {
        proxy_pass http://valthera_bot/ready;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
    }

    # ===========================================
    # MONITORING / PROMETHEUS
    # ===========================================
    
    # Métriques Prometheus
    # Accès restreint recommandé en production!
    location /metrics {
        proxy_pass http://valthera_bot/metrics;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        
        # Restreindre l'accès (décommentez selon vos besoins)
        # allow 127.0.0.1;
        # allow 10.0.0.0/8;    # Réseau interne
        # allow 172.16.0.0/12; # Docker
        # deny all;
    }
    
    # Status détaillé JSON
    location /status {
        proxy_pass http://valthera_bot/status;
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        
        # Restreindre l'accès (décommentez selon vos besoins)
        # allow 127.0.0.1;
        # deny all;
    }

    # ===========================================
    # PAGE D'ACCUEIL (optionnel)
    # ===========================================
    
    location / {
        # Page statique simple ou redirect
        return 200 '{"service": "Valthera Adventures Bot", "status": "running", "health": "/health", "metrics": "/metrics"}';
        add_header Content-Type application/json;
    }

    # ===========================================
    # SÉCURITÉ
    # ===========================================
    
    # Cacher la version nginx
    server_tokens off;
    
    # Headers de sécurité basiques
    add_header X-Content-Type-Options nosniff always;
    add_header X-Frame-Options DENY always;
}

