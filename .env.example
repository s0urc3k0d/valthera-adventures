# Discord Configuration
DISCORD_TOKEN=your_bot_token_here
CLIENT_ID=your_client_id_here
GUILD_ID=your_test_guild_id_here

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/valthera
# Pour Docker:
# MONGODB_URI=mongodb://mongo:27017/valthera

# Environment
NODE_ENV=development

# Logging
LOG_LEVEL=debug

# Health Server (pour nginx / monitoring)
HEALTH_PORT=3000

# Game Configuration
DEFAULT_STARTING_GOLD=100
XP_MULTIPLIER=1.0
DROP_RATE_MULTIPLIER=1.0

# Cache Configuration
CACHE_TTL=300

# Admin Configuration
ADMIN_USER_IDS=["your_discord_user_id"]

# Docker - Mongo Express (optionnel)
MONGO_EXPRESS_PASSWORD=changeme
